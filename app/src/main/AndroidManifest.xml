<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.photogalleryapp">

    <!-- Required Permissions -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.MANAGE_EXTERNAL_STORAGE"/>

    <!-- Application Declaration -->
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="My Camera App"
        android:theme="@style/Theme.AppCompat.DayNight.NoActionBar">

        <!-- Main Activity Declaration -->
        <activity android:name=".MainActivity" android:label="Main Activity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Image Details Activity Declaration -->
        <activity android:name=".ImageDetailsActivity"/>

        <!-- Image Gallery Activity Declaration -->
        <activity android:name=".ImageGalleryActivity"/>

    </application>
</manifest>
